<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/btn_dialog_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_left"
            android:gravity="center"
            android:padding="15dp"
            android:text="{fa-camera}"
            android:layout_marginRight="@dimen/toolbar_height"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:layout_marginEnd="@dimen/toolbar_height" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/btn_dialog_event"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_right"
            android:gravity="center"
            android:padding="15dp"
            android:text="{fa-calendar}"
            android:textColor="@android:color/black"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/toolbar_height"
            android:text="@string/btn_picture"
            android:textColor="@android:color/white"
            android:layout_marginEnd="@dimen/toolbar_height"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/btn_event"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>